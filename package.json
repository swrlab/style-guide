{
	"name": "@swrlab/style-guide",
	"version": "2.1.6",
	"packageManager": "bun@1.3.9",
	"description": "SWR Audio Lab's engineering style guide.",
	"type": "module",
	"license": "ISC",
	"homepage": "https://github.com/swrlab/style-guide#readme",
	"bugs": {
		"url": "https://github.com/swrlab/style-guide/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/swrlab/style-guide.git"
	},
	"files": [
		"dist"
	],
	"main": "dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		},
		"./biome.json": "./dist/biome.json",
		"./.oxlintrc.json": "./dist/.oxlintrc.json",
		"./.oxfmtrc.json": "./dist/.oxfmtrc.json",
		"./eslint": {
			"types": "./dist/eslint.d.mts",
			"default": "./dist/eslint.mjs"
		},
		"./eslint.js": {
			"types": "./dist/eslint.d.mts",
			"default": "./dist/eslint.mjs"
		},
		"./eslint.mjs": {
			"types": "./dist/eslint.d.mts",
			"default": "./dist/eslint.mjs"
		},
		"./prettier": {
			"types": "./dist/prettier.d.mts",
			"default": "./dist/prettier.mjs"
		},
		"./prettier.mjs": {
			"types": "./dist/prettier.d.mts",
			"default": "./dist/prettier.mjs"
		},
		"./prettier.js": {
			"types": "./dist/prettier.d.mts",
			"default": "./dist/prettier.mjs"
		},
		"./package.json": "./package.json"
	},
	"publishConfig": {
		"provenance": true
	},
	"scripts": {
		"dev": "eslint-config-inspector",
		"build": "bun run build:typegen && tsdown",
		"build:typegen": "bun scripts/typegen.ts",
		"build:inspector": "bun run build && eslint-config-inspector build",
		"checks": "bun run --parallel prettier-check typecheck lint",
		"format": "prettier --write .",
		"lint": "eslint --max-warnings=0",
		"lint:fix": "eslint --max-warnings=0 --fix",
		"prettier-check": "prettier --check .",
		"release": "bumpp",
		"test": "bun run prettier-check && bun run typecheck && bun run lint",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"eslint": "^10.0.0",
		"prettier": ">= 3.6.0"
	},
	"peerDependenciesMeta": {
		"eslint": {
			"optional": true
		},
		"prettier": {
			"optional": true
		}
	},
	"dependencies": {
		"@eslint-community/eslint-plugin-eslint-comments": "^4.6.0",
		"@eslint/js": "^10.0.1",
		"@eslint/markdown": "^7.5.1",
		"eslint-config-flat-gitignore": "^2.2.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-flat-config-utils": "^3.0.1",
		"eslint-plugin-de-morgan": "^2.0.0",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jsdoc": "^62.7.1",
		"eslint-plugin-jsonc": "^3.1.1",
		"eslint-plugin-n": "^17.24.0",
		"eslint-plugin-perfectionist": "^5.6.0",
		"eslint-plugin-pnpm": "^1.6.0",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-regexp": "^3.0.0",
		"eslint-plugin-security": "^4.0.0",
		"eslint-plugin-sonarjs": "^4.0.0",
		"eslint-plugin-testing-library": "^7.16.0",
		"eslint-plugin-unicorn": "^63.0.0",
		"eslint-plugin-unused-imports": "^4.4.1",
		"eslint-plugin-vue": "^10.8.0",
		"eslint-plugin-vuejs-accessibility": "^2.5.0",
		"eslint-plugin-yml": "^3.3.0",
		"globals": "^17.3.0",
		"jsonc-eslint-parser": "^3.1.0",
		"local-pkg": "^1.1.2",
		"prettier": "^3.8.1",
		"typescript-eslint": "^8.56.1",
		"vue-eslint-parser": "^10.4.0"
	},
	"devDependencies": {
		"@eslint/config-inspector": "^1.4.2",
		"@types/node": "^25.3.1",
		"bumpp": "^10.4.1",
		"eslint": "^10.0.2",
		"eslint-typegen": "^2.3.1",
		"lint-staged": "^16.2.7",
		"tsdown": "^0.21.0-beta.2",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": "^22.18.0 || >= 24.6.0",
		"bun": "^1.3.9"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	}
}
