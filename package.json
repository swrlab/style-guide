		"eslint-plugin-unicorn": "^56.0.0",
		"eslint-plugin-unused-imports": "^4.1.4",
		"eslint-plugin-vue": "^9.31.0",
		"globals": "^15.12.0"
	},
	"devDependencies": {
		"eslint": "^9.15.0",
		"eslint-define-config": "^2.1.0",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3"
	},
	"engines": {
		"node": ">=18"
	},
	"lint-staged": {
		"*": "prettier -w --ignore-unknown"
	},
	"prettier": "./prettier/index.js"
