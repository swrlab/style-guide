{
	"name": "@swrlab/style-guide",
	"version": "1.0.3",
	"description": "SWR Audio Lab's engineering style guide",
	"type": "module",
	"license": "ISC",
	"homepage": "https://github.com/swrlab/style-guide#readme",
	"bugs": {
		"url": "https://github.com/swrlab/style-guide/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/swrlab/style-guide.git"
	},
	"files": [
		"src/biome/biome.json",
		"dist"
	],
	"main": "dist/index.js",
	"exports": {
		"./biome.json": "./src/biome/biome.json",
		"./eslint.js": "./dist/eslint.js",
		"./prettier.js": "./dist/prettier.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsdown",
		"lint": "eslint --max-warnings=0",
		"lint:fix": "eslint --max-warnings=0 --fix",
		"format": "prettier --write .",
		"prettier-check": "prettier --check .",
		"test": "bun run prettier-check && bun run lint"
	},
	"peerDependencies": {
		"eslint": "^9.13.0",
		"prettier": ">=3.0.0"
	},
	"peerDependenciesMeta": {
		"eslint": {
			"optional": true
		},
		"prettier": {
			"optional": true
		}
	},
	"dependencies": {
		"@babel/core": "^7.28.3",
		"@babel/eslint-parser": "^7.28.0",
		"@eslint/js": "^9.34.0",
		"@stylistic/eslint-plugin-js": "^4.4.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jsonc": "^2.20.1",
		"eslint-plugin-n": "^17.21.3",
		"eslint-plugin-perfectionist": "^4.15.0",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-testing-library": "^7.6.8",
		"eslint-plugin-unicorn": "^60.0.0",
		"eslint-plugin-unused-imports": "^4.2.0",
		"eslint-plugin-vue": "^10.4.0",
		"globals": "^16.3.0"
	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"eslint": "^9.34.0",
		"eslint-define-config": "^2.1.0",
		"lint-staged": "^16.1.6",
		"prettier": "^3.6.2",
		"tsdown": "^0.14.2",
		"typescript": "^5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"lint-staged": {
		"*": "prettier -w --ignore-unknown"
	},
	"prettier": "./prettier/index.js"
}
