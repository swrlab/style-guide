{
	"name": "@swrlab/style-guide",
	"version": "2.0.7",
	"description": "SWR Audio Lab's engineering style guide",
	"type": "module",
	"license": "ISC",
	"homepage": "https://github.com/swrlab/style-guide#readme",
	"bugs": {
		"url": "https://github.com/swrlab/style-guide/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/swrlab/style-guide.git"
	},
	"files": [
		"dist"
	],
	"main": "dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"default": "./dist/index.js"
		},
		"./biome.json": "./dist/biome.json",
		"./eslint.js": {
			"types": "./dist/eslint.d.ts",
			"default": "./dist/eslint.js"
		},
		"./prettier.js": {
			"types": "./types/prettier.d.ts",
			"default": "./dist/prettier.js"
		},
		"./package.json": "./package.json"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "eslint-config-inspector",
		"build": "bun run build:typegen && tsdown",
		"build:typegen": "bun scripts/typegen.ts",
		"build:inspector": "bun run build && eslint-config-inspector build",
		"format": "prettier --write .",
		"lint": "eslint --max-warnings=0",
		"lint:fix": "eslint --max-warnings=0 --fix",
		"prettier-check": "prettier --check .",
		"release": "bumpp",
		"test": "bun run prettier-check && bun run typecheck && bun run lint",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"eslint": "^9.34.0",
		"prettier": ">= 3.6.0"
	},
	"peerDependenciesMeta": {
		"prettier": {
			"optional": true
		}
	},
	"dependencies": {
		"@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
		"@eslint/js": "^9.34.0",
		"@eslint/markdown": "^7.2.0",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-flat-config-utils": "^2.1.1",
		"eslint-plugin-de-morgan": "^1.3.1",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jsdoc": "^54.2.1",
		"eslint-plugin-jsonc": "^2.20.1",
		"eslint-plugin-n": "^17.21.3",
		"eslint-plugin-perfectionist": "^4.15.0",
		"eslint-plugin-pnpm": "^1.1.1",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-regexp": "^2.10.0",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-testing-library": "^7.6.8",
		"eslint-plugin-unicorn": "^61.0.1",
		"eslint-plugin-unused-imports": "^4.2.0",
		"eslint-plugin-vue": "^10.4.0",
		"eslint-plugin-vuejs-accessibility": "^2.4.1",
		"eslint-plugin-yml": "^1.18.0",
		"globals": "^16.3.0",
		"jsonc-eslint-parser": "^2.4.0",
		"local-pkg": "^1.1.2",
		"prettier": "^3.6.2",
		"typescript-eslint": "^8.42.0",
		"vue-eslint-parser": "^10.2.0",
		"yaml-eslint-parser": "^1.3.0"
	},
	"devDependencies": {
		"@eslint/config-inspector": "^1.2.0",
		"@types/node": "^24.3.0",
		"bumpp": "^10.2.3",
		"eslint": "^9.34.0",
		"eslint-typegen": "^2.3.0",
		"lint-staged": "^16.1.6",
		"tsdown": "^0.14.2",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2"
	},
	"engines": {
		"node": "^22.18.0 || >= 24.6.0"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	}
}
