{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"formatWithErrors": true,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "es5",
			"quoteStyle": "single"
		},
		"globals": ["Bun"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noNodejsModules": "info",
				"noUndeclaredDependencies": "info"
			},
			"nursery": {
				"useSortedClasses": "info"
			}
		}
	},
	"assist": {
		"enabled": false
	}
}
