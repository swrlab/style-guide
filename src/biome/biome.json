{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true,
		"indentStyle": "tab",
		"formatWithErrors": true,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"attributePosition": "auto",
			"bracketSpacing": true,
			"bracketSameLine": true,
			"expand": "auto",
			"semicolons": "asNeeded",
			"trailingCommas": "es5",
			"quoteStyle": "single"
		},
		"globals": []
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noNodejsModules": "info",
				"noUndeclaredDependencies": "info"
			},
			"nursery": {
				"useSortedClasses": "info"
			},
			"style": {
				"useNodejsImportProtocol": "on"
			}
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "off",
					"options": {
						"identifierOrder": "natural",
						"groups": [
							{ "type": true },
							":URL:",
							":PACKAGE_WITH_PROTOCOL:",
							":PACKAGE:",
							":NODE:",
							":BUN:",
							":ALIAS:",
							":PATH:"
						]
					}
				}
			}
		}

	}
}
