{
	"languages": {
		"JSONC": {
			"formatter": {
				"language_server": {
					"name": "eslint"
				}
			},
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			},
			"prettier": {
				"allowed": false
			},
			"format_on_save": "on"
		},
		"JSON": {
			"formatter": {
				"language_server": {
					"name": "eslint"
				}
			},
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			},
			"prettier": {
				"allowed": false
			},
			"format_on_save": "off"
		},
		"JavaScript": {
			"formatter": {
				"language_server": {
					"name": "eslint"
				}
			},
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			},
			"prettier": {
				"allowed": false
			},
			"format_on_save": "on"
		},
		"TypeScript": {
			"language_servers": ["eslint", "!deno", "!biome", "..."],
			// "formatter": {
			// 	"language_server": {
			// 		"name": "eslint"
			// 	}
			// },
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			},
			"prettier": {
				"allowed": true
			},
			"format_on_save": "on"
		}
	}
}
